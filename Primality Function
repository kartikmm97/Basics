number = int(input("Enter a number to verify primality function: "))
divisor_range = range(2, number)
if number == 1:
    print(str(number) + " is neither a prime number nor a composite number.")
elif number == 2:
    print(str(number) + " is a prime number.")
elif number <= 1:
    print(str(number) + " is not a prime number.")
for element in divisor_range:
    if number % element != 0:
        print(str(number) + " is a prime number.")
    else:
        print(str(number) + " is not a prime number.")
